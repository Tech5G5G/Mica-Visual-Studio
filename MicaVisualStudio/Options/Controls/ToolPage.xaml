<UserControl x:Class="MicaVisualStudio.Options.Controls.ToolPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicaVisualStudio.Options.Controls"
             mc:Ignorable="d">
    
    <ScrollViewer>
        <local:WindowOptions x:Name="windowOptions"
                             WindowName="Tool windows"
                             EnabledSource="ToolWindows"
                             ThemeSource="ToolTheme"
                             BackdropSource="ToolBackdrop"
                             CornerPreferenceSource="ToolCornerPreference"
                             VerticalAlignment="Top" />
    </ScrollViewer>
</UserControl>
