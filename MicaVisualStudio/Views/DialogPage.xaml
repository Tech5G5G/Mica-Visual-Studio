<UserControl x:Class="MicaVisualStudio.Views.DialogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicaVisualStudio.Views"
             xmlns:models="clr-namespace:MicaVisualStudio.ViewModels"
             d:DataContext="{d:DesignInstance Type=models:OptionPageViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MicaVisualStudio;component/UI/OptionResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ScrollViewer>
        <GroupBox Header="Dialog windows" Style="{StaticResource OptionGroupBoxStyle}">
            <StackPanel>
                <CheckBox x:Name="EnabledCheck"
                          IsChecked="{Binding General.DialogWindows}"
                          Content="Enable separate options for dialog windows"
                          Margin="5,0,0,2" Style="{StaticResource OptionCheckBoxStyle}" />

                <Grid Margin="0,2,0,0" Visibility="{Binding ElementName=EnabledCheck, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="14" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Backdrop" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" />
                    <ComboBox SelectedIndex="{Binding General.DialogBackdrop, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2">
                        <ComboBoxItem Content="Auto" Visibility="Collapsed" />
                        <ComboBoxItem Content="None" />
                        <ComboBoxItem Content="Mica" />
                        <ComboBoxItem Content="Acrylic" />
                        <ComboBoxItem Content="Tabbed" />
                        <ComboBoxItem Content="Glass" />
                    </ComboBox>

                    <TextBlock Text="Corner preference" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="2" />
                    <ComboBox SelectedIndex="{Binding General.DialogCornerPreference, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2" Grid.Row="2">
                        <ComboBoxItem Content="Default" />
                        <ComboBoxItem Content="Square" />
                        <ComboBoxItem Content="Round" />
                        <ComboBoxItem Content="Round small" />
                    </ComboBox>

                    <TextBlock Text="Theme" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="4" />
                    <ComboBox SelectedIndex="{Binding General.DialogTheme, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2" Grid.Row="4">
                        <ComboBoxItem Content="Visual Studio" />
                        <ComboBoxItem Content="System" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </Grid>
            </StackPanel>
        </GroupBox>
    </ScrollViewer>
</UserControl>
