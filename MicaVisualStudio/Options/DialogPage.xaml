<UserControl x:Class="MicaVisualStudio.Options.DialogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicaVisualStudio.Options"
             mc:Ignorable="d">
    
    <ScrollViewer>
        <local:WindowOptions x:Name="windowOptions"
                             WindowName="Dialog windows"
                             EnabledSource="DialogWindows"
                             ThemeSource="DialogTheme"
                             BackdropSource="DialogBackdrop"
                             CornerPreferenceSource="DialogCornerPreference"
                             VerticalAlignment="Top" />
    </ScrollViewer>
</UserControl>
