<UserControl x:Class="MicaVisualStudio.Views.GeneralPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicaVisualStudio.Views"
             xmlns:models="clr-namespace:MicaVisualStudio.ViewModels"
             xmlns:options="clr-namespace:MicaVisualStudio.Options"
             d:DataContext="{d:DesignInstance Type=models:OptionPageViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MicaVisualStudio;component/UI/OptionResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <GroupBox Header="Main window" Style="{StaticResource OptionGroupBoxStyle}">
                <Grid Margin="0,2,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="14" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Backdrop" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" />
                    <ComboBox SelectedIndex="{Binding General.Backdrop, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2">
                        <ComboBoxItem Content="Auto" Visibility="Collapsed" />
                        <ComboBoxItem Content="None" />
                        <ComboBoxItem Content="Mica" />
                        <ComboBoxItem Content="Acrylic" />
                        <ComboBoxItem Content="Tabbed" />
                        <ComboBoxItem Content="Glass" />
                    </ComboBox>

                    <TextBlock Text="Corner preference" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="2" />
                    <ComboBox SelectedIndex="{Binding General.CornerPreference, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2" Grid.Row="2">
                        <ComboBoxItem Content="Default" />
                        <ComboBoxItem Content="Square" />
                        <ComboBoxItem Content="Round" />
                        <ComboBoxItem Content="Round small" />
                    </ComboBox>

                    <TextBlock Text="Theme" Margin="6,0,0,0" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="4" />
                    <ComboBox SelectedIndex="{Binding General.Theme, Converter={StaticResource EnumToInt32Converter}}"
                              Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2" Grid.Row="4">
                        <ComboBoxItem Content="Visual Studio" />
                        <ComboBoxItem Content="System" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </Grid>
            </GroupBox>

            <GroupBox Header="App" Padding="2,4">
                <StackPanel Orientation="Horizontal">
                    <Grid Margin="6,0,14,0">
                        <TextBlock Text="Theme" VerticalAlignment="Center" />
                        <TextBlock Text="Corner preference" VerticalAlignment="Center" Visibility="Hidden" />
                    </Grid>

                    <ComboBox SelectedIndex="{Binding General.AppTheme, Converter={StaticResource EnumToInt32Converter}}"
                              HorizontalAlignment="Left" Style="{StaticResource OptionComboBoxStyle}"
                              Grid.Column="2">
                        <ComboBoxItem Content="Visual Studio" />
                        <ComboBoxItem Content="System" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Other" Padding="2,4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <CheckBox x:Name="ForceTransparencyCheck"
                              IsChecked="{Binding General.ForceTransparency}"
                              Content="Force transparency"
                              Margin="5,0,0,0" Style="{StaticResource OptionCheckBoxStyle}" />
                    <TextBlock Text="Force transparency on all elements" Margin="5,0,0,0" Grid.Row="1" />

                    <CheckBox IsChecked="{Binding General.LayeredWindows}"
                              Content="Layered windows"
                              IsEnabled="{Binding ElementName=ForceTransparencyCheck, Path=IsChecked}"
                              Margin="5,0,0,0" Style="{StaticResource OptionCheckBoxStyle}"
                              Grid.Row="3" />
                    <TextBlock Text="Make child windows layered" Margin="5,0,0,0" Grid.Row="4" />

                    <CheckBox IsChecked="{Binding General.AcrylicMenus}"
                              Content="Acrylic menus"
                              Margin="5,0,0,0" Style="{StaticResource OptionCheckBoxStyle}"
                              Grid.Row="6" />
                    <TextBlock Text="Add acrylic behind popups and menus" Margin="5,0,0,0" Grid.Row="7" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
