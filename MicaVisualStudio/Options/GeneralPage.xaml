<UserControl x:Class="MicaVisualStudio.Options.GeneralPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicaVisualStudio.Options"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel>
            <local:WindowOptions x:Name="windowOptions"
                                 WindowName="Main window"
                                 ShowCheck="False"
                                 ThemeSource="Theme"
                                 BackdropSource="Backdrop"
                                 CornerPreferenceSource="CornerPreference"
                                 VerticalAlignment="Top" />

            <GroupBox Header="App" Padding="2,4">
                <StackPanel Orientation="Horizontal">
                    <Grid Margin="6,0,14,0">
                        <TextBlock Text="Theme" VerticalAlignment="Center" />
                        <TextBlock Text="Corner preference" VerticalAlignment="Center" Visibility="Hidden" />
                    </Grid>
                    <ComboBox x:Name="theme" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Grid.Column="2">
                        <ComboBoxItem Content="Visual Studio" />
                        <ComboBoxItem Content="System" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Other" Padding="2,4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <CheckBox x:Name="force" Content="Force transparency" VerticalContentAlignment="Center" Height="20" Margin="5,0,0,0" Click="Force_Click" />
                    <TextBlock Text="Forces transparency on all elements" Margin="5,0,0,0" Grid.Row="1" />

                    <CheckBox x:Name="layered" Content="Layered windows" VerticalContentAlignment="Center" Height="20" Margin="5,0,0,0" Grid.Row="3" />
                    <TextBlock Text="Make child windows layered" Margin="5,0,0,0" Grid.Row="4" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
